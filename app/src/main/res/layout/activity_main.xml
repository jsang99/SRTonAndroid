<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/svAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAtten"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Atten" />

            <Button
                android:id="@+id/btnStow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Stow" />

            <Button
                android:id="@+id/btnTrack"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="track" />

            <Button
                android:id="@+id/btnAzel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="azel" />

            <Button
                android:id="@+id/btnNpoint"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="npoint" />

            <Button
                android:id="@+id/btnBMSW"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="BMSW" />

            <Button
                android:id="@+id/btnFreq"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Freq" />

            <Button
                android:id="@+id/btnOffset"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="offset" />

            <Button
                android:id="@+id/btnDrift"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="drift" />

            <Button
                android:id="@+id/btnRecord"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="record" />

            <Button
                android:id="@+id/btnRcmdfl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="rcmdfl" />

            <Button
                android:id="@+id/btnCal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="cal" />

            <Button
                android:id="@+id/btnVane"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="vane" />

            <Button
                android:id="@+id/btnHelp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="help" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMsgDisplay"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="TextView placeholder, displays messages relevant to the button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/svAction"/>

    <EditText
        android:id="@+id/plain_text_input"
        android:layout_height="wrap_content"
        android:hint="Type your command here..."
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEnter"
        app:layout_constraintStart_toEndOf="@+id/svAction"
        android:layout_width="0dp" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="enter"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
